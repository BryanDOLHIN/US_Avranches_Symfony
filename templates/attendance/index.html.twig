{% extends 'base.html.twig' %}

{% block title %}Page d'appel

{% endblock %}

{% block body %}
	<link href="/css/attendance.css" rel="stylesheet"/>

	<div class="col-lg-8 mx-auto p-5 py-md-5">
		<div class="mt-3 text-center">
			<h1 class="h1 mb-2 display-4">Page d'appel</h1>
		</div>

		<div class="row row-cols-1 row-cols-md-2 g-4 pt-5">
			{% for categorie in categories %}
				<div class="col">
					<a href="/appel/{{ categorie.name }}">
						<div class="card-attendance">
							<img src="/uploads/images/{{ categorie.image }}" class="zoom" alt="{{ categorie.id }}">
						</div>
					</a>
				</div>
			{% else %}
				<td colspan="9">Il n'y a aucune cat√©gorie !</td>
			{% endfor %}
		</div>
	</div>

{% endblock %}

