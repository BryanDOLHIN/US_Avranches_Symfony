<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="images\logo.svg" sizes="any" type="image/svg+xml">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}

          {# <link href="/css/tests.css" rel="stylesheet" /> #}
          <link href="/css/navbar.css" rel="stylesheet" />
          <link href="/css/pagebase.css" rel="stylesheet" />
          <link href="/css/param.css" rel="stylesheet" />

          {{ encore_entry_link_tags('app') }}
          <!--Styles.css-->
			    <link rel="stylesheet" href="/css/bootstrap.css">
        {% endblock %}

        {% block javascripts %}
        <script type="text/javascript" src="/js/tests.js"></script>
            {{ encore_entry_script_tags('app') }}
            <script src="https://kit.fontawesome.com/54e9e3700c.js" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    {% block body %}
    <link href="/css/nav2.css" rel="stylesheet" />

    <body>
        {# <div class='container'>
        <button class='button-nav'> Tableau de bord</button>
        </div> #}
   <div class='containerbtnbht'>
    {% if app.user %}
      <p>
        <span>
          Bienvenue {{ app.user.getFirstName() }}
        </span>
      </p>
    {% endif %}
          <div class="btnbht-group">
            <button class="btnbht" onClick='redirectToPage("/charts")'>Statistiques</button>
            <button class="btnbht">Matchs</button>
          </div>
          <div class="btnbht-group">
            <button class="btnbht">Absences</button>
            <button class="btnbht" onClick='redirectToPage("/team")'>Mon équipe</button>
          </div>
          <div class="btnbht-group">
            <button class="btnbht" onClick='redirectToPage("/appel")'>Appel</button>
            <button class="btnbht" onClick='redirectToPage("/tests")'>Tests</button>
          </div>
          <div class="btnbht-group">
            <button class="btnbht" onClick='redirectToPage("/profile")'>Administration</button>
            <button class="btnbht" onClick='redirectToPage("/pdf")'>2</button>
          </div>
          <div class="btnbht-group">
            <button class="btnbht" onClick='redirectToPage("/profile")'>Paramètres</button>
            <button class="btnbht" onClick='redirectToPage("user/{{ app.user.getId() }}/edit")'>3</button>
          </div>
        </div>
  
      {% endblock %}
    </body>
</html>
